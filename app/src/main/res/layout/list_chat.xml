<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border2"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/fighter"
            android:layout_alignParentStart="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/imageView7"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/textNameResponder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="3dp"
                android:text="Responder's Name"
                android:textColor="#505050"
                android:textSize="12sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textResponderChat"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:text="Responder's Chat Here"
                android:textColor="#7C7C7C"
                android:textSize="10sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/textTimeChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TimeDate"
            android:textColor="#7C7C7C"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</RelativeLayout>