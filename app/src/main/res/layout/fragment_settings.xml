<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearShowSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp">

        <ImageView
            android:id="@+id/imageSettings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_baseline_settings_24"
            app:tint="#FFB8B8" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:text="Settings"
                android:textSize="15sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Showing system settings"
                android:textColor="#FFB4B4"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearGeneralSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/linearShowSettings"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp">

        <TextView
            android:id="@+id/generalSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="General Settings"
            android:textStyle="italic"
            android:textColor="#9E9E9E"
            android:textSize="11sp"/>

        <Switch
            android:id="@+id/settingsToSpeech"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Text To Speech"
            tools:ignore="UseSwitchCompatOrMaterialXml"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="5dp" />

        <Switch
            android:id="@+id/settingsToAlarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Firefighter Nearby"
            tools:ignore="UseSwitchCompatOrMaterialXml"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notification when a firefighter is nearby."
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="#B3B3B3"/>

        <Switch
            android:id="@+id/settingsToBgService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Background Service"
            tools:ignore="UseSwitchCompatOrMaterialXml"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Application's running even if it is minimized.(BETA)\nThe service is not 100% guaranteed when app is closed."
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="#B3B3B3"/>

        <TextView
            android:id="@+id/textView24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Privacy Settings"
            android:textStyle="italic"
            android:textColor="#9E9E9E"
            android:textSize="11sp"
            android:layout_marginTop="30dp"/>

        <Switch
            android:id="@+id/settingsToAnonymous"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Anonymous"
            tools:ignore="UseSwitchCompatOrMaterialXml"
            android:textSize="16sp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your name and home address are hidden\nwhen sending emergency report.\n\nNote: Only emergency location and mobile number are not hidden."
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="#B3B3B3"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp">

        <ImageView
            android:id="@+id/settingsToHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/arrow_back" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/settingsLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="Sign out"
            android:drawableEnd="@drawable/ic_baseline_logout_24"
            android:drawablePadding="10dp"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#9F9F9F"/>

    </androidx.cardview.widget.CardView>

</RelativeLayout>