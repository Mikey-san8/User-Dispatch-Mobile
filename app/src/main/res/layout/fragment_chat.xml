<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearEmergency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/fire"
            android:layout_marginStart="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chatEmergency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergency Messages"
                android:textSize="12sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/chatDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete Messages"
                android:textColor="#FF5858"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearEmergency"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:elevation="1dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/startChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Chat"
            android:gravity="center"
            android:textColor="#9A9A9A"
            android:textSize="16sp"
            app:drawableTint="#FF9C9C"
            android:padding="15dp"
            android:drawablePadding="10dp"
            app:drawableStartCompat="@drawable/ic_baseline_chat_24" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>