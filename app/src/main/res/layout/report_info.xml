<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/recordClose"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/close_btn"
        android:layout_gravity="right"
        android:layout_margin="15dp"/>

    <LinearLayout
        android:id="@+id/linearMainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/fighter" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:text="REPORT INFORMATION"
                android:textSize="16sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/deleteReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete Sent Report"
                android:textColor="#FF5858"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/border2">

        <TextView
            android:id="@+id/infoN"
            android:textColor="#BABABA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"

            android:textStyle="italic"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/infoName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/person"
            android:drawablePadding="5dp"
            android:text="Your Name Here"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border2"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/infoP"
            android:textColor="#BABABA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile Number"
            android:textStyle="italic"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/infoPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Mobile Number Here"
            android:drawableStart="@drawable/phone"
            android:drawablePadding="5dp"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border2"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/infoA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home Address"
            android:textColor="#BABABA"
            android:textStyle="italic"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/infoAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Address Here"
            android:drawableStart="@drawable/address"
            android:drawablePadding="5dp"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border2"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/infoL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Incident Location"
            android:textStyle="italic"
            android:textColor="#BABABA"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/infoLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Location Here"
            android:drawableStart="@drawable/ic_baseline_my_location_24"
            android:drawablePadding="5dp"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border2"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/infoC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comment/Note"
            android:textStyle="italic"
            android:textColor="#BABABA"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/infoComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Comment Here"
            android:drawablePadding="5dp"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/infoD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date and Time"
            android:textColor="#BABABA"
            android:layout_gravity="center"
            android:textStyle="italic"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/infoDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date and Time Here"
            android:textColor="#FF9696"
            android:layout_gravity="center"
            android:textSize="18sp"/>

    </LinearLayout>


    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textColor="#BABABA"
        android:gravity="center"
        android:text="Tap To View Map"
        android:layout_marginTop="30dp"/>

    <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom">

    <ImageView
        android:id="@+id/Logo_demo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/logo_splash"
        android:layout_gravity="center"
        android:layout_marginRight="2dp"
        android:layout_marginTop="6dp"
        app:tint="#A16767" />

    <ImageView
        android:id="@+id/logo_demo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/logo_splash"
        android:layout_gravity="center"/>

</FrameLayout>


</LinearLayout>